<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="createjars" name="AndEnginePhysicsBox2DExtension">

	<taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
	
	<property environment="env" />
	<property name="ECLIPSE_HOME" value="E:/eclipse/galileo-android" />
	<property name="debuglevel" value="source,lines,vars" />
	<property name="target" value="1.6" />
	<property name="source" value="1.6" />
	<property name="bin" value="bin" />
	<property name="src" value="src" />
	
	<property name="nativelib" value="libs/armeabi/libandenginephysicsbox2dextension.so" />
	
	<property name="binfile" value="bin/andenginephysicsbox2dextension.jar" />
	
	<property name="nativetargetlist" value="../AndEngineExamples/libs/armeabi/libandenginephysicsbox2dextension.so,
	../SuperDroid/libs/armeabi/libandenginephysicsbox2dextension.so,
	../BoxFacePhysicsLiveWallpaper/libs/armeabi/libandenginephysicsbox2dextension.so,
	../BoxFaceStacker/libs/armeabi/libandenginephysicsbox2dextension.so,
	../GravityCollector/libs/armeabi/libandenginephysicsbox2dextension.so,
	../AlphabetShoot/libs/armeabi/libandenginephysicsbox2dextension.so" />
	
	<property name="targetlist" value="../AndEngineExamples/lib/andenginephysicsbox2dextension.jar,
	../SuperDroid/lib/andenginephysicsbox2dextension.jar,
	../BoxFacePhysicsLiveWallpaper/lib/andenginephysicsbox2dextension.jar, 
	../BoxFaceStacker/lib/andenginephysicsbox2dextension.jar, 
	../GravityCollector/lib/andenginephysicsbox2dextension.jar, 
	../AlphabetShoot/lib/andenginephysicsbox2dextension.jar" />
	
	<target name="createjar" >
		<echo>${targetfile}</echo>
        
		<copy file="${binfile}" tofile="${targetfile}"/>
		
		<eclipse.refreshLocal resource="${targetfile}" depth="infinite"/>
    </target>
    
   	<target name="copynative" >
		<echo>Native: ${nativetargetfile}</echo>
        
		<copy file="${nativelib}" tofile="${nativetargetfile}"/>
    </target>
   
	<target name="createjars" >
		<jar destfile="${binfile}">
			<zipfileset dir="${src}">
				<include name="**/*.*" />
				<exclude name="**/R.java" />
			</zipfileset>
			<zipfileset dir="${bin}">
				<include name="**/*.class" />
				<exclude name="**/R.class" />
				<exclude name="**/R$*.class" />
			</zipfileset>
        </jar>
        
		<foreach list="${nativetargetlist}" target="copynative" param="nativetargetfile" delimiter="," trim="true" />
		<foreach list="${targetlist}" target="createjar" param="targetfile" delimiter="," trim="true" />	
    </target>
</project>
